{
  "name": "tipibot-controller",
  "version": "1.0.0",
  "description": "A controller for the tipibot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "electron-packager . tipibot-controller --platform=darwin --arch=x64",
    "dist": "electron-builder",
    "pack:win": "electron-packager . tipibot-controller --platform=win32 --arch=x64"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [],
  "author": "IDLV - Arthur Masson",
  "license": "MIT",
  "devDependencies": {
    "electron": "^6.0.9",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.0.6",
    "electron-rebuild": "^1.8.2"
  },
  "dependencies": {
    "serialport": "^7.0.2",
    "socket.io": "^2.1.1"
  },
  "build": {
    "appId": "tipibot-controller",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "asar": false
    }
  }
}
