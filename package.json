{
  "name": "tipibot-controller",
  "version": "1.0.0",
  "description": "A controller for the tipibot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "electron-packager . tipibot-controller --platform=darwin --arch=x64",
    "pack:win": "electron-packager . tipibot-controller --platform=win32 --arch=x64",
    "pack:arm7l": "electron-packager . tipibot-controller --platform=linux --arch=armv7l"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [],
  "author": "IDLV - Arthur Masson",
  "license": "MIT",
  "devDependencies": {
    "electron": "^6.0.9",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.8.2"
  },
  "dependencies": {
    "file-saver": "^1.3.3",
    "jquery": "^3.2.1",
    "paper": "^0.11.3",
    "perspective-transform": "^1.1.3",
    "serialport": "^9.0.2",
    "socketio": "^1.0.0",
    "three": "^0.137.0",
    "three.meshline": "^1.0.3",
    "ws": "^5.2.0"
  },
  "build": {
    "appId": "tipibot-controller",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "asar": false
    }
  }
}
